extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each genre in genre_books
        dt
          a(href=genre.url) #{genre.title}
        dd #{genre.summary}

      else
        p This genre has no books

  hr
  p
    a(href=genre.url+'/delete') Delete genre
  p
    a(href=genre.url+'/update') Update genre
